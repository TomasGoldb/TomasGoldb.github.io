@{
    ViewData["Title"] = "Home Page";
}

<main class="pagina-register-login">
    <section class="card-formulario">
        <div class="texto-register">
            <h1>¡Bienvenido de nuevo!</h1>
        </div>
        <div class="register-form">
            <h1>Iniciar Sesion</h1>
            <form action='@Url.Action("LogearUsuario", "Home")' method="post">
                <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" autocomplete="off" placeholder="" name="mail" required>
                <label for="floatingInput">Correo electrónico</label>
                </div>
                <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingInput" autocomplete="off" placeholder="" name="contra" required>
                <label for="floatingInput">Contraseña</label>
                </div>
               
                @Html.Raw(ViewBag.error)
                <button type="submit" class="login-boton boton-azul">Iniciar</button>
                </form>
        </div>

    </section>
</main>