@{
    int hola = 0;
    double cantEstrellas = 0;
}

<section class="dash">
    <div class="containerDash">
        <h2 class="h2Dash">Detalles del plan</h2>

        <h3 class="h3Dash">Participantes que votaron:</h3>
        <div class="participants">
            <!-- Participante 1 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Pedro Sanjo">
                Pedro Sanjo
                <span class="status status-confirmed"></span>
            </div>
            <!-- Participante 2 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Nicola Tesla">
                Nicola Tesla
                <span class="status status-confirmed"></span>
            </div>
            <!-- Participante 3 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Magalí García">
                Magalí García
                <span class="status status-confirmed"></span>
            </div>
            <!-- Participante 4 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Elon Mosca">
                Elon Mosca
                <span class="status status-confirmed"></span>
            </div>
        </div>

        <h3 class="h3Dash">Participantes que no votaron:</h3>
        <div class="participants">
            <!-- Participante 5 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Santiago Boro">
                Santiago Boro
                <span class="status status-pending"></span>
            </div>
            <!-- Participante 6 -->
            <div class="participant">
                <img src="/img/perfil.webp" alt="Foto de Bill Gates">
                Bill Gates
                <span class="status status-pending"></span>
            </div>
        </div>

        <h3 class="h3Dash">Preferencias:</h3>
        <div class="preferences">
            <!-- Preferencia 1 -->
            <div class="preference">
                <img src="/img/empanadas.png" alt="Icono de Empanadas">
                Empanadas
            </div>
        </div>
    </div>
</section>

<div class="container text-center my-5">
    <h2 class="title">Resultados</h2>
    <div class="row justify-content-center mt-4">
        <!-- Card 1 -->
        <div class="col-md-3">
            <div class="vote-card">
                <div class="card-img-container">
                    <img src="/img/mcdonalds.jpg" alt="Hoyts" class="card-img-top">
                    <button class="vote-icon">+</button>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Hoyts</h5>
                    <p class="card-text">Abasto</p>
                    @{
                        cantEstrellas = 3.5;
                        for (int i = 0; i < 5; i++) {
                            if (cantEstrellas >= 1) {
                                <img class="estrellita" src="/img/estrellitaFull.svg">
                                cantEstrellas -= 1;
                            } else if (cantEstrellas == 0.5) {
                                <img class="estrellita" src="/img/mediaEstrellita.svg">
                                cantEstrellas -= 0.5;
                            } else {
                                <img class="estrellita" src="/img/estrellitaVacia.svg">
                            }
                        }
                    }
                    @{
                        hola = 75;
                    }
                    <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="@hola" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: @hola%">@hola%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-3">
            <div class="vote-card">
                <div class="card-img-container">
                    <img src="/img/mcdonalds.jpg" alt="Menorá House" class="card-img-top">
                    <button class="vote-icon">+</button>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Menorá House</h5>
                    <p class="card-text">Yatay 226</p>
                    @{
                        cantEstrellas = 5;
                        for (int i = 0; i < 5; i++) {
                            if (cantEstrellas >= 1) {
                                <img class="estrellita" src="/img/estrellitaFull.svg">
                                cantEstrellas -= 1;
                            } else if (cantEstrellas == 0.5) {
                                <img class="estrellita" src="/img/mediaEstrellita.svg">
                                cantEstrellas -= 0.5;
                            } else {
                                <img class="estrellita" src="/img/estrellitaVacia.svg">
                            }
                        }
                    }
                    @{
                        hola = 25;
                    }
                    <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="@hola" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: @hola%">@hola%</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-md-3">
            <div class="vote-card">
                <div class="card-img-container">
                    <img src="/img/mcdonalds.jpg" alt="Menorá House" class="card-img-top">
                    <button class="vote-icon">+</button>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Menorá House</h5>
                    <p class="card-text">Yatay 226</p>
                    @{
                        cantEstrellas = 2.5;
                        for (int i = 0; i < 5; i++) {
                            if (cantEstrellas >= 1) {
                                <img class="estrellita" src="/img/estrellitaFull.svg">
                                cantEstrellas -= 1;
                            } else if (cantEstrellas == 0.5) {
                                <img class="estrellita" src="/img/mediaEstrellita.svg">
                                cantEstrellas -= 0.5;
                            } else {
                                <img class="estrellita" src="/img/estrellitaVacia.svg">
                            }
                        }
                    }
                    @{
                        hola = 50;
                    }
                    <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="@hola" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: @hola%">@hola%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="buttonsDash">
    <a class="btnDash" href='@Url.Action("AgregarParticipantes", "CrearPlan")'>Agregar participante</a>
    <a class="btnDash" href='@Url.Action("DashPlan2", "Plan")'>Iniciar votación</a>
</div>
